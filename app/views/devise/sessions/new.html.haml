= render partial: '/layouts/header'

.loginmain
  .loginmain__panel
    .loginmain__panel--account
      %p アカウントをお持ちでない方はこちら
      = link_to signups_path, class: "nonaccount" do
        新規会員登録
    .loginmain__panel--sns
      %button.facebook
        %i.fab.fa-facebook
        Facebookでログイン
      %button.google
        %i.fab.fa-google
        Googleでログイン
    .loginmain__panel--form
      .loginform
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |form|
          .loginform__mail
            = form.text_field :email, placeholder: "メールアドレス", class: "mail"
          .loginform__pass
            = form.password_field :password, placeholder: "パスワード", class: "pass"
            = form.submit "ログイン", class: "button"



= render partial: '/layouts/footer'